---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="m-0 px-4 bg-white dark:bg-gray-900 shadow-[0_2px_8px_rgba(var(--black),0.05)] dark:shadow-none transition-colors">
    <nav class="flex items-center justify-between max-w-7xl mx-auto">
        <h2 class="text-xl font-bold">
            <a href="/" class="flex items-center no-underline text-gray-900 dark:text-gray-100 hover:opacity-80 transition-opacity">
                <img src="/android-chrome-512x512.png" alt="logo" class="h-8 w-auto mr-2 invert dark:invert-0" />
                <span>{SITE_TITLE}</span>
            </a>
        </h2>
        <div class="internal-links flex gap-6">
            <HeaderLink href="/" class="py-4 px-2 text-gray-900 dark:text-gray-100 border-b-4 border-transparent hover:border-gray-300 transition-colors">Home</HeaderLink>
            <HeaderLink href="/blog" class="py-4 px-2 text-gray-900 dark:text-gray-100 border-b-4 border-transparent hover:border-gray-300 transition-colors">Blog</HeaderLink>
            <HeaderLink href="/about" class="py-4 px-2 text-gray-900 dark:text-gray-100 border-b-4 border-transparent hover:border-gray-300 transition-colors">About</HeaderLink>
        </div>
        <div class="social-links flex gap-4">
            <a href="https://github.com/AbelTomato" target="_blank" class="text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 transition-colors">
                <span class="sr-only">Go to my GitHub homepage</span>
                <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
                    <path fill="currentColor" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                </svg>
